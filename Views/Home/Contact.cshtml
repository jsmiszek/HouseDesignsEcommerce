@model ContactViewModel
@{
    ViewData["Title"] = "Contact Us";
}
<h1>@ViewData["Title"]</h1>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
}
<div class="col-md-4">
    <form method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <label asp-for="Name">Your Name:</label>
        <br />
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
        <br />
        <label asp-for="Email">Email:</label>
        <br />
        <input class="form-control" type="email" asp-for="Email" />
        <span asp-validation-for="Email"></span>
        <br />
        <label asp-for="Subject">Subject:</label>
        <br />
        <input class="form-control" type="text" asp-for="Subject" />
        <span asp-validation-for="Subject"></span>
        <br />
        <label asp-for="Message">Message:</label>
        <br />
        <textarea class="form-control" rows="4" asp-for="Message"></textarea>
        <span asp-validation-for="Message"></span>
        <br />
        <input class="btn btn-primary" type="submit" value="SendMessage" />

        <div>@ViewBag.UserMessage</div>

    </form>
</div>